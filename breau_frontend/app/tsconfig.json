{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "./src",
    "paths": {
      "@api": ["api/index.ts"],
      "@api/*": ["api/*"],
      "@hooks/*": ["hooks/*"],
      "@components/*": ["components/*"],
      "@context/*": ["context/*"],
      "@pages/*": ["pages/*"],
      "@styles/*": ["styles/*"],
      "@lib/*": ["lib/*"],
      "@data/*": ["data/*"],
      "@utils/*": ["utils/*"],
    }
  },
  "include": ["src"]
}
